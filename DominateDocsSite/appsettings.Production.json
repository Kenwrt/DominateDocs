{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {SimpleException:lj}{NewLine}",
          "restrictedToMinimumLevel": "Information"
        }
      }
      // optional: keep Seq if you actually have one reachable from Azure
      // {
      //   "Name": "Seq",
      //   "Args": {
      //     "serverUrl": "http://localhost:5341"
      //   }
      // }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "LiquidDocs"
    }
  }
}
