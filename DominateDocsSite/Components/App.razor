@* App.razor — Blazor Server host with a single Google Maps load (classic markers) *@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["DominateDocsSite.styles.css"]" />
    <link href=@Assets["_content/MudBlazor/MudBlazor.min.css"] rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">


    <ImportMap />
    @* <link rel="icon" type="image/png" href="favicon.png" /> *@
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png" />
    <link rel="apple-touch-icon" href="apple-touch-icon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />

    <PageTitle>DominateDocs | Hard Money Lending</PageTitle>

    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <Routes @rendermode="PageRenderMode" />

    <!-- App scripts -->
    <script src=@Assets["_content/MudBlazor/MudBlazor.min.js"]></script>
    <script src=@Assets["_content/Extensions.MudBlazor.StaticInput/NavigationObserver.js"]></script>

    <!-- Google Maps JS loaded ONCE. Classic markers only, no Map ID drama. -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCU34t9rm8-NHsUGsWlWmfTuLrnUsO-v3Y&libraries=places" defer></script>

    <!-- Blazor-friendly interop -->
    <script src="/js/googlemaps.js" defer></script>

    @* Old scripts intentionally not used *@
    @* <script src=@Assets["js/googlemaps.js"]></script> *@
    @* <script src=@Assets["js/address-autocomplete.js"]></script> *@
    <script src=@Assets["/js/logout.js"]></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null;
}
