@using Microsoft.AspNetCore.Identity
@using DominateDocsSite.Data

@inject SignInManager<DominateDocsSite.Data.ApplicationUser> SignInManager

<MudNavMenu>
    <MudNavLink Href="Account/Manage" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Person">Profile</MudNavLink>
    <MudNavLink Href="Account/Manage/Email" Icon="@Icons.Material.Filled.Email">Email</MudNavLink>
    <MudNavLink Href="Account/Manage/ChangePassword" Icon="@Icons.Material.Filled.Lock">Password</MudNavLink>
   
    <MudNavLink Href="Account/Manage/PaymentOptions" Icon="@Icons.Material.Filled.PhoneLocked">Billing Information</MudNavLink>
    
    <MudNavLink Href="Account/Manage/BillingHistory" Icon="@Icons.Material.Filled.LockClock">Billing History</MudNavLink>

    <MudNavLink Href="/UserDefaultProfile" Icon="@Icons.Material.Filled.List">Default Loan Profiles</MudNavLink>
    
</MudNavMenu>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
