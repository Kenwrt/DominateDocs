    {
        // model (0–1) -> UI text (0–100)
        SetFunc = v => (v * 100m).ToString("0.##", CultureInfo.InvariantCulture),
        // UI text (accepts "7.5" or "7.5%") -> model (0–1)
        GetFunc = s =>
        {
            if (string.IsNullOrWhiteSpace(s)) return 0m;
            s = s.Trim().TrimEnd('%');
