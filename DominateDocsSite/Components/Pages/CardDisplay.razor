@page "/carddisplay"
@using MudBlazor

<MudPaper Class="d-flex flex-row flex-nowrap overflow-auto p-2" Style="background: #f8f9fa;">
    @foreach (var card in Cards)
    {
        <MudCard Class="mx-2 pastel-card" Style="min-width:250px; max-width:300px;">
            <MudCardContent>
                <MudText Typo="Typo.h6">@card.Title</MudText>
                <MudText Typo="Typo.body2">@card.Description</MudText>
            </MudCardContent>
        </MudCard>
    }
</MudPaper>

