@page "/XXXXXX"
@using MudBlazor


<style>

    :root {
        --dd-navy: #1C2F6E;
        --dd-teal: #2FB6B8;
        --dd-light: #B9E6E7;
        --dd-verylight: #E7F6F9;
        --dd-white: #FEFFFF;
    }

    /* Top thin bar */
    .topbar.mud-appbar {
        background: var(--dd-navy) !important;
        color: white !important;
        height: 44px;
    }

    .topbar .mud-icon-root {
        color: #fff !important;
        opacity: .9;
    }

    .topbar .mud-typography {
        color: #fff !important;
        opacity: .95;
    }

    .topbar-link {
        color: #fff !important;
        opacity: .95;
        text-decoration: none;
    }

        .topbar-link:hover {
            opacity: 1;
            text-decoration: underline;
        }

    /* Main nav */
    .mainnav.mud-appbar {
        background: white !important;
        color: var(--dd-navy) !important;
        border-bottom: 1px solid rgba(0,0,0,.06);
        height: 74px;
    }

    .nav-link {
        color: var(--dd-navy) !important;
        text-decoration: none;
        font-weight: 500;
    }

        .nav-link:hover {
            text-decoration: underline;
        }

    .logo-badge {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        background: linear-gradient(135deg, var(--dd-verylight), var(--dd-light));
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--dd-navy);
        box-shadow: 0 6px 16px rgba(0,0,0,.08);
    }

    .logo-text .logo-title {
        font-weight: 800;
        letter-spacing: .5px;
        color: var(--dd-teal);
        line-height: 1.0;
    }

    .logo-text .logo-sub {
        font-weight: 800;
        letter-spacing: .5px;
        color: #9aa0a6;
        line-height: 1.0;
    }

    /* Hero */
    .hero-shell {
        padding-top: 0;
    }

    .hero {
        position: relative;
        background: var(--dd-teal);
        overflow: hidden;
        padding: 86px 0 0 0;
    }

    /* left side */
    .hero-left {
        padding: 20px 0 80px 0;
    }

    .hero-title {
        color: white !important;
        font-weight: 800 !important;
        letter-spacing: -.5px;
        line-height: 1.02;
        font-size: clamp(44px, 4vw, 74px);
    }

    .hero-subtitle {
        color: rgba(255,255,255,.92) !important;
        margin-top: 22px;
        max-width: 560px;
        line-height: 1.35;
    }

    .hero-cta {
        display: flex;
        align-items: center;
        gap: 18px;
        margin-top: 30px;
    }

    .cta-primary {
        border-radius: 12px !important;
        padding: 14px 20px !important;
        box-shadow: 0 14px 26px rgba(0,0,0,.16);
    }

    .cta-secondary {
        border-radius: 12px !important;
        padding: 12px 12px !important;
        color: var(--dd-navy) !important;
        font-weight: 600 !important;
    }

    /* Right side “artwork” placeholder */
    .hero-right {
        position: relative;
        min-height: 420px;
    }

    .hero-blob-stage {
        position: relative;
        width: 100%;
        height: 100%;
        min-height: 520px;
    }

    /* Blob shapes to mimic your layered waves */
    .blob {
        position: absolute;
        inset: 0;
        border-radius: 44% 56% 51% 49% / 42% 45% 55% 58%;
        filter: blur(0px);
    }

    .blob-1 {
        background: #69CACB;
        transform: translate(8%, -6%) scale(1.15);
        opacity: .95;
    }

    .blob-2 {
        background: var(--dd-light);
        transform: translate(22%, 6%) scale(1.05);
        border-radius: 60% 40% 38% 62% / 50% 60% 40% 50%;
        opacity: .95;
    }

    .blob-3 {
        background: var(--dd-verylight);
        transform: translate(40%, 10%) scale(.92);
        border-radius: 52% 48% 60% 40% / 45% 55% 45% 55%;
        opacity: .98;
    }

    .blob-4 {
        background: white;
        width: 58%;
        height: 68%;
        right: -6%;
        bottom: -10%;
        left: auto;
        top: auto;
        border-radius: 60% 40% 60% 40% / 55% 60% 40% 45%;
        opacity: 1;
    }

    /* Stats bar */
    .statsbar {
        margin: 46px 24px 0 24px;
        background: var(--dd-navy) !important;
        border-radius: 18px !important;
        padding: 26px 14px;
        box-shadow: 0 18px 34px rgba(0,0,0,.18);
        transform: translateY(50%);
    }

    .stat {
        padding: 10px 18px;
        text-align: center;
    }

    .stat-value {
        color: white;
        font-weight: 800;
        font-size: clamp(34px, 3vw, 56px);
        line-height: 1.0;
    }

    .stat-label {
        color: rgba(255,255,255,.82);
        margin-top: 8px;
        font-weight: 500;
    }



</style>


<MudLayout>

    <!-- TOP THIN BAR -->
    <MudAppBar Elevation="0" Dense="true" Class="topbar">
        <MudContainer MaxWidth="MaxWidth.False" Class="d-flex align-center w-100 px-6">
            <div class="d-flex align-center gap-6 topbar-left">
                <div class="d-flex align-center gap-2">
                    <MudIcon Icon="@Icons.Material.Filled.Phone" Size="Size.Small" />
                    <MudText Typo="Typo.body2">+1 (555) LENDING (536-3464)</MudText>
                </div>

                <div class="d-flex align-center gap-2">
                    <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" />
                    <MudText Typo="Typo.body2">info@dominatedocs.ai</MudText>
                </div>

                <div class="d-flex align-center gap-2">
                    <MudIcon Icon="@Icons.Material.Filled.Place" Size="Size.Small" />
                    <MudText Typo="Typo.body2">456 Financial Plaza Dallas, TX 75201</MudText>
                </div>
            </div>

            <MudSpacer />

            <div class="d-flex align-center gap-5">
                <MudLink Href="/signup" Class="topbar-link">Sign up</MudLink>
                <MudLink Href="/login" Class="topbar-link">Login</MudLink>
            </div>
        </MudContainer>
    </MudAppBar>

    <!-- MAIN NAV -->
    <MudAppBar Elevation="0" Dense="false" Class="mainnav">
        <MudContainer MaxWidth="MaxWidth.False" Class="d-flex align-center w-100 px-6">
            <!-- Logo placeholder -->
            <div class="d-flex align-center gap-3">
                <div class="logo-badge">
                    <!-- Replace with your real logo later -->
                    <MudIcon Icon="@Icons.Material.Filled.Shield" />
                </div>
                <div class="logo-text">
                    <div class="logo-title">DOMINATE</div>
                    <div class="logo-sub">DOCS</div>
                </div>
            </div>

            <MudSpacer />

            <div class="d-flex align-center gap-6 navlinks">
                <MudLink Href="/different" Class="nav-link">Why We Are Different</MudLink>
                <MudLink Href="/about" Class="nav-link">About Us</MudLink>
                <MudLink Href="/faqs" Class="nav-link">FAQs</MudLink>
                <MudLink Href="/contact" Class="nav-link">Contact Us</MudLink>
            </div>
        </MudContainer>
    </MudAppBar>

    <!-- HERO -->
    <MudMainContent Class="hero-shell">
        <section class="hero">
            <MudContainer MaxWidth="MaxWidth.False" Class="px-6">
                <MudGrid Spacing="0" AlignItems="AlignItems.Stretch">
                    <MudItem xs="12" md="6" Class="hero-left">
                        <MudText Typo="Typo.h1" Class="hero-title">
                            Dynamic Hard<br />
                            Money Lending<br />
                            Documents
                        </MudText>

                        <MudText Typo="Typo.h6" Class="hero-subtitle">
                            Generate state-compliant lending documents<br />
                            tailored to your specific requirements and venue needs
                        </MudText>

                        <div class="hero-cta">
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Class="cta-primary">
                                Start Creating Documents
                            </MudButton>

                            <MudButton Variant="Variant.Text"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       StartIcon="@Icons.Material.Filled.Visibility"
                                       Class="cta-secondary">
                                View Demo
                            </MudButton>
                        </div>
                    </MudItem>

                    <!-- Right side is “artwork” area (CSS blobs for now) -->
                    <MudItem xs="12" md="6" Class="hero-right">
                        <div class="hero-blob-stage">
                            <div class="blob blob-1"></div>
                            <div class="blob blob-2"></div>
                            <div class="blob blob-3"></div>
                            <div class="blob blob-4"></div>
                        </div>
                    </MudItem>
                </MudGrid>
            </MudContainer>

            <!-- STATS BAR -->
            <MudPaper Elevation="0" Class="statsbar">
                <MudContainer MaxWidth="MaxWidth.False" Class="px-6">
                    <MudGrid Spacing="0" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                        <MudItem xs="12" md="3" Class="stat">
                            <div class="stat-value">50,000+</div>
                            <div class="stat-label">Documents Generated</div>
                        </MudItem>

                        <MudItem xs="12" md="3" Class="stat">
                            <div class="stat-value">1,200+</div>
                            <div class="stat-label">Active Users</div>
                        </MudItem>

                        <MudItem xs="12" md="3" Class="stat">
                            <div class="stat-value">50</div>
                            <div class="stat-label">States Supported</div>
                        </MudItem>

                        <MudItem xs="12" md="3" Class="stat">
                            <div class="stat-value">99.8%</div>
                            <div class="stat-label">Success Rate</div>
                        </MudItem>
                    </MudGrid>
                </MudContainer>
            </MudPaper>
        </section>
    </MudMainContent>

</MudLayout>
